# PocketAgent Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED API KEYS
# ============================================

# OpenRouter - AI Models (https://openrouter.ai/)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_key_here

# Composio - Tool Integrations (https://app.composio.dev/)
# Get your API key from: https://app.composio.dev/settings
COMPOSIO_API_KEY=your_composio_key_here

# Mem0 - Intelligent Memory (https://app.mem0.ai/)
# Get your API key from: https://app.mem0.ai/settings
MEM0_API_KEY=your_mem0_key_here

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port for Python FastAPI server
PORT=8000

# WPP Bridge URL (Node.js WhatsApp bridge)
WPP_BRIDGE_URL=http://localhost:3001
WPP_BRIDGE_PORT=3001

# ============================================
# AI MODELS (via OpenRouter)
# ============================================

# Main language model for chat
# Options: google/gemini-3-flash-preview, moonshotai/kimi-k2.5, anthropic/claude-3.5-sonnet
LLM_MODEL=google/gemini-3-flash-preview

# Vision model for image analysis
# Options: google/gemini-3-flash-preview, moonshotai/kimi-k2.5
VISION_MODEL=google/gemini-3-flash-preview

# Image generation model (keep this for image generation)
IMAGE_MODEL=google/gemini-2.5-flash-image

# Audio transcription model
# Options: google/gemini-3-flash-preview, moonshotai/kimi-k2.5
AUDIO_MODEL=google/gemini-3-flash-preview

# Text-to-speech model
# Options: google/gemini-3-flash-preview, moonshotai/kimi-k2.5
TTS_MODEL=google/gemini-3-flash-preview

# ============================================
# WHATSAPP CONFIGURATION
# ============================================

# Your phone number (with country code)
USER_PHONE=+1234567890

# WhatsApp session name (can be any identifier)
WPP_SESSION_NAME=pocket-agent

# Run browser in headless mode (true for production, false for development)
WPP_HEADLESS=false

# ============================================
# AUTONOMOUS EXECUTION
# ============================================

# Allow agent to execute commands autonomously
# Set to false for proactive "Stop asking, Start building" behavior
# Set to true to require approval for dangerous commands
AUTONOMOUS_EXECUTION_APPROVAL=true

# ============================================
# PROACTIVE AGENT MODE
# ============================================

# Enable proactive friction detection and autonomous problem-solving
# When enabled, agent detects problems in casual conversation and builds solutions
# Example: User says "checking emails manually is annoying" → Agent fetches and summarizes emails
# Based on Moltbook philosophy: Notice friction → Build solution → Present working code
PROACTIVE_MODE_ENABLED=true

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Python callback URL (for WPP bridge to reach Python server)
# Use 127.0.0.1 instead of localhost to avoid IPv6 issues
PYTHON_CALLBACK_URL=http://127.0.0.1:8000
